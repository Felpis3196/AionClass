@model AionClass.Frontend.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<div class="card shadow-lg rounded-4 border-0 bg-light-subtle">
    <div class="card-body p-4 w-100">
        <h4 class="card-title text-center text-purple mb-4 fw-bold">Editar Curso</h4>

        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Título -->
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control rounded-pill border-secondary-subtle" placeholder="Título do curso" />
                <label asp-for="Title">Título</label>
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <!-- Descrição -->
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control rounded-pill border-secondary-subtle" placeholder="Descrição do curso" />
                <label asp-for="Description">Descrição</label>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Categoria -->
            <div class="form-floating mb-3">
                <input asp-for="Category" class="form-control rounded-pill border-secondary-subtle" placeholder="Categoria" />
                <label asp-for="Category">Categoria</label>
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <!-- Nível -->
            <div class="form-floating mb-3">
                <input asp-for="Level" class="form-control rounded-pill border-secondary-subtle" placeholder="Nível" />
                <label asp-for="Level">Nível</label>
                <span asp-validation-for="Level" class="text-danger small"></span>
            </div>

            <!-- URL da Thumbnail -->
            <div class="form-floating mb-3">
                <input asp-for="ThumbnailUrl" type="url" class="form-control rounded-pill border-secondary-subtle" placeholder="URL da imagem" />
                <label asp-for="ThumbnailUrl">URL da Thumbnail</label>
                <span asp-validation-for="ThumbnailUrl" class="text-danger small"></span>
            </div>

            <!-- Data de Criação -->
            <div class="form-floating mb-3">
                <input asp-for="CreatedAt" class="form-control rounded-pill border-secondary-subtle" placeholder="Data de Criação" readonly value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")" />
                <label asp-for="CreatedAt">Data de Criação</label>
                <span asp-validation-for="CreatedAt" class="text-danger small"></span>
            </div>

            <!-- Ativo -->
            <div class="form-check form-switch mb-4">
                <input class="form-check-input" asp-for="IsActive" role="switch" />
                <label class="form-check-label fw-semibold" for="IsActive">Ativo</label>
            </div>

            <!-- Botões -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-purple text-white fw-semibold rounded-pill py-2">
                    Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    /* 🎨 Estilos Personalizados */
    .btn-purple {
        background-color: #6f42c1;
        border: none;
        transition: 0.3s ease-in-out;
    }

    .btn-purple:hover {
        background-color: #5936a3;
    }

    .text-purple {
        color: #6f42c1;
    }

    .form-control:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }

    .card {
        max-width: 600px;
        margin: auto;
    }
</style>
