@{
    ViewData["Title"] = "Nossas Formações";
    ViewData["BodyClass"] = "courses-page-body";
    Layout = "_Layout";

    var cursos = new[]
    {
        new { Tag="LANÇAMENTO", Gradient="course-gradient-purple-blue", Icon="fab fa-react", Nivel="INTERMEDIÁRIO", NivelClass="level-intermediate", Titulo="Next.js", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-green", Icon="fas fa-users-cog", Nivel="AVANÇADO", NivelClass="level-advanced", Titulo="Tech Lead", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-orange", Icon="fas fa-handshake", Nivel="INICIANTE", NivelClass="level-beginner", Titulo="Soft Skills", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-pink-purple", Icon="fab fa-golang", Nivel="INTERMEDIÁRIO", NivelClass="level-intermediate", Titulo="Formação em Go", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-purple-blue", Icon="fas fa-code", Nivel="INTERMEDIÁRIO", NivelClass="level-intermediate", Titulo="Formação em Kotlin", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-orange", Icon="fas fa-globe", Nivel="INICIANTE", NivelClass="level-beginner", Titulo="Inglês para Devs", Link="#" },
        new { Tag="NOVA", Gradient="course-gradient-green", Icon="fab fa-python", Nivel="INTERMEDIÁRIO", NivelClass="level-intermediate", Titulo="Formação em Python", Link="#" },
        new { Tag="LANÇAMENTO", Gradient="course-gradient-pink-purple", Icon="fas fa-server", Nivel="AVANÇADO", NivelClass="level-advanced", Titulo="APIs RESTful com Node.js", Link="#" }
    };
}

<section class="courses-page-header text-center">
    <p class="subtitle">Do zero ao avançado_</p>
    <h1>Conheça nossas formações em programação</h1>
</section>

<section class="courses-container">
    @foreach (var curso in cursos)
    {
        <article class="course-card @curso.Gradient">
            <span class="course-tag @(curso.Tag == "LANÇAMENTO" ? "launched" : "new")">@curso.Tag</span>
            <div class="course-content-wrapper">
                <div class="course-icon-main" aria-hidden="true">
                    <i class="@curso.Icon" title="@curso.Titulo"></i>
                </div>
                <div class="course-details">
                    <div class="course-level-tag">
                        <span class="level-indicator @curso.NivelClass" aria-hidden="true"></span>
                        <span class="sr-only">Nível:</span> @curso.Nivel
                    </div>
                    <h2 class="course-title">@curso.Titulo</h2>
                </div>
                <a href="@curso.Link" class="course-arrow-link" aria-label="Ver detalhes do curso @curso.Titulo">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </article>
    }
</section>
