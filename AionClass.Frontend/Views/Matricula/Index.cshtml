@model IEnumerable<AionClass.Frontend.Models.Matricula>

@{
    ViewData["Title"] = "Index";
    int QuantidadeMatriculas = Model.Count();
}

<h1>Index</h1>

@if (QuantidadeMatriculas < 1)
{
    <div class="alert alert-info">Sem Matrículas Ainda</div>
}

<table class="table text-black">
    <thead>
        <tr>
            <th>ID</th>
            <th>Curso ID</th>
            <th>Data da Matrícula</th>
            <th>Usuário</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CursoId</td>
                <td>@item.DataMatricula.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ApplicationUserId</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                          onsubmit="return confirm('Tem certeza que deseja excluir esta matrícula?');"
                          style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
