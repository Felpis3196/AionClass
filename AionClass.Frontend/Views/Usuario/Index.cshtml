@model IEnumerable<AionClass.Frontend.Models.ApplicationUser>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Criar Novo
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Nenhum usuário encontrado.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Ativo</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeCompleto</td>
                    <td>@item.Email</td>
                    <td>@item.PerfilUsuario</td>
                    <td>
                        @if (item.EstaAtivo)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Não</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2" title="Editar">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
